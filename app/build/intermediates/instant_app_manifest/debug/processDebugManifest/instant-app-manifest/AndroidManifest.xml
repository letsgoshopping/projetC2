<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.lgs"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.project.lgs.Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.project.lgs.AllSuppliersClasses.AllSuppliersAdapter" />
        <activity android:name="com.project.lgs.AllSuppliersClasses.AllSuppliers" />
        <activity android:name="com.project.lgs.AllProductsClasses.AllProducts" />
        <activity android:name="com.project.lgs.SupplierClasses.SupplierDetails" />
        <activity android:name="com.project.lgs.ProductDetails" />
        <activity android:name="com.project.lgs.add_product" />
        <activity android:name="com.project.lgs.ProblemActivity" />
        <activity
            android:name="com.project.lgs.ProductClasses.ProductFragment"
            android:label="Products" />
        <activity android:name="com.project.lgs.MainActivity" >
        </activity>
        <activity
            android:name="com.project.lgs.SearchClasses.NoResults"
            android:parentActivityName="com.project.lgs.MainActivity" />
        <activity
            android:name="com.project.lgs.SearchClasses.SearchActivity"
            android:parentActivityName="com.project.lgs.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <!--
          StitchInitProvider is a ContentProvider that will associate the application's Context
          with Stitch. It also will look for resource values such as stitch_client_app_id to register
           a default app client.
        -->
        <provider
            android:name="com.mongodb.stitch.android.core.internal.StitchInitProvider"
            android:authorities="com.project.lgs.StitchInitProvider"
            android:exported="false" />

        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
            Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.project.lgs.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>